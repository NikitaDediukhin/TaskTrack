<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TaskTrack" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <item name="fontFamily">@font/onest_font</item>
        <item name="android:statusBarColor">@color/secondaryColor</item>
    </style>

    <style name="Theme.TaskTrack" parent="Base.Theme.TaskTrack" />

    <style name="CardViewStyle" parent="Widget.Material3.CardView.Outlined">
        <item name="shapeAppearanceOverlay">@style/CardShape</item>
    </style>
    <style name="CardShape" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="TextInputStyle" parent="ThemeOverlay.Material3.TextInputEditText.FilledBox">
        <item name="boxBackgroundColor">@color/primaryColor</item>
        <item name="elevation">0dp</item>
    </style>
    
    <style name="SearchViewStyle" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:textColor">@color/black</item>
        <item name="android:queryHint">Введите название задачи</item>
        <item name="android:background">@color/white</item>
        <item name="android:iconifiedByDefault">false</item>
        <item name="android:queryBackground">@android:color/transparent</item>
        <item name="android:submitBackground">@android:color/transparent</item>
        <item name="android:inputType">text</item>

    </style>

    <style name="CustomTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabMaxWidth">0dp</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
        <item name="tabIndicatorColor">@color/secondaryColor</item>
        <item name="tabTextColor">@color/black</item>
        <item name="tabBackground">@color/backgroundColor</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="fontFamily">rounded</item>
    </style>
    
    <style name="ButtonStyle" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/custom_button_background</item>
    </style>

    <style name="DialogCustomTheme" parent="Theme.Material3.DayNight.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>
</resources>